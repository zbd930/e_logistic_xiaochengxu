/* 导航栏 */
.movie-container{
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  margin-bottom: 50rpx;
}
.navbar{
  display: flex;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 300;
  width: 100%;
  height: 50px;
  flex-direction: row;
  text-align: center;
  color: #000000;
  font-size: 15px;
  box-sizing: border-box;
  background-color: #FFF;
  border-bottom: 1rpx solid #DFDFDF;
}
.navbar-item{
  flex: 1;
  padding: 26rpx 0px;
}
.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 10rpx solid #3787e2;
  color: #000000;
}
.movie-content-wrapper{
  padding-top: 50px;
  height: 93%;
  width: 100%;
}
swiper{
  height: 100%;
  width: 100%;
}
.items_div{
  border:0px solid;
  padding:10rpx;
  background: #DFDFDF;
  width: 100%;
  height: 150rpx;
  margin-top:2.5%;
  overflow: hidden
}
.items_div view{
  position: relative;
  left: 60rpx;
  font-size: 28rpx;
}
.xiangqing{
  position: absolute;
  background: #E6F3F9;
  border: 1px solid #3787e2;
  border-radius: 10rpx;
  font-size: 28rpx;
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  right: 50rpx;
  top: 120rpx;
  margin-right:20rpx;
  margin-top:-50rpx;
}
.table {
  margin-top:3%;
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 2rem;
  align-items: center;
}
.td {
    font-size: 25rpx;
    width:40%;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #FFF;
}
.th {
  width: 40%;
  justify-content: center;
  background: #000000;
  color: #fff;
  display: flex;
  height: 2rem;
  text-size-adjust: 2px;
  align-items: center;
}
.bottom{
    position: absolute;
    bottom: 20rpx;
    left: 34%;
    font-size: 21rpx;
