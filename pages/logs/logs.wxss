
#top{
  height:400rpx;
}
.log-list {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.log-item {
  margin: 10rpx;
}
.lunbo{
  width: 100%;
  height: 100%;
}
/* 导航栏 */
.movie-container{
  display: flex;
  flex-direction: column;
  height:400rpx;
  width: 100%;
  margin-bottom: 50rpx;
}
.navbar{
  display: flex;
  position: relative;
  left: 0;
  top: 0;
  z-index: 500;
  width:90%;
  margin-left:5%; 
  height: 50rpx;
  flex-direction: row;
  text-align: center;
  color: #000;
  font-size: 28rpx;
  box-sizing: border-box;
}
.navbar-item{
  flex: 1;
}
.navbar-item-active{
  transition: all 0.3s;
  border-bottom: 1rpx solid rgb(242, 174, 55);
  color: rgb(242, 174, 55);
}
.movie-content-wrapper{
  margin-top: 85rpx;
  width: 100%;
}
.section{
  width: 100%;
  height: 150rpx;
  line-height: 150rpx;
  display: flex;  
  flex-direction: row;
  color: rgb(118, 118, 118);
  font-size: 28rpx;
  border-bottom: 1px solid #e4e4e4;
} 
.section picker{
  width: 50%;
  text-align: center;
}
.picker text{
  margin-left:20rpx;
  font-size: 30rpx;
}
.section image{
  width: 80rpx;
  height: 75rpx;
  margin-top: 40rpx;
  text-align: center
}
.iconfont{
   width: 20%;
   text-align: center
}
.middle{
  padding:2% 5% 5% 5%;
  font-size: 38rpx;
  border-bottom: 1px solid #e4e4e4;
}
.middle picker{
  text-align: center;
}

.middle input{
 width: 200rpx;
 font-size: 25rpx;
 padding-left:10rpx;
 border-bottom: 1px solid #A8A8A8;
}
.button{
  display: block;
  background:#3787e2;
  border:0px solid;
  width: 80%;
  border-radius: 100px;
}
.method{
  padding-bottom: 50rpx;
  padding-left: 20rpx;
  font-size: 12px;
  width: 200rpx;
  height: 25rpx;
  border-bottom: 1px;
  border-top: 0px;
  border-right: 0px;
  border-left: 0px;
  border-style: solid;
  border-color: #CCCCCC;
}
#method{
  margin-top:20rpx;
}
.items{
  width: 80rpx;
  height: 120rpx;
  margin-top:220rpx;
  text-align: center;
  margin-left:25%;
}
.items image{
  width: 80rpx;
  height: 120rpx;
}
.Elogistic{
  font-size: 50rpx;
  width: 100%;
  text-align: center;
}
.swiper{
  margin-top:30rpx;
  border-top:#DFDFDF 1px solid;
  height: 400rpx;
  width: 80%;
  margin-left:10%;
}
/* 底部 */
.bottom{
  margin-top:34rpx;
  width: 100%;
  padding: 1%;
}
.sections{
 margin:0 auto;
}
.btn::after {
	 border: none; 
}
.btn{
  height: 250rpx;
  width: 100rpx;
  padding: 0rpx;
  text-align: center;
  background-color: transparent;
}
.details{
  border-bottom: 1px solid #000;
  margin-left:15rpx
}

