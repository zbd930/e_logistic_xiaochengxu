/* pages/xiaobao/xiaobao.wxss */
.background_items{
  width: 100%;
  min-height: 100%;
  background: rgb(239, 239, 244);
  margin-bottom: 40rpx;
}
.top image{
  width: 100%;
  height: 400rpx;
  overflow: auto;
}
.middle{
  width: 90%;
  margin-left:5%;
  border-radius: 30rpx;
  top:-50rpx;
  background: rgb(245, 250, 253);
  padding-top:30rpx;
  padding-bottom:30rpx;
}
.picker{
  width: 33%;
}
.picker text{
  margin:8rpx auto;
}
.plane{
  width: 80rpx;
  height: 80rpx;
  margin-left:60rpx;
}
.item{
  color: grey;
  font-size: 25rpx;
}
#top{
  width: 80%;
  margin-left:10%;
}
#desc{
  flex: 1;align-items:center;
}
.desc{
  font-size: 28rpx;
  color:rgb(188,188,188);
}
.title{
  margin-top:10rpx
}
.div{
  padding: 30rpx;
  margin-top:24rpx;
  margin-left:6%;
  width: 80%;
  background: rgb(237, 242, 255)
}
.items{
  margin-top:20rpx;
  margin-left:2.5%;
  padding-top:30rpx;
  width: 95%;
  height: 400rpx;
  background-color:#fff; 
  border-radius: 20rpx;
} 
.items button{
  margin-top:20rpx;
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: rgb(76, 172, 254);
  color: white
}
.image{
  width: 100rpx;
  height: 75rpx;
  position: relative;
  align-items:center;
}
/* 弹出层 */
.cancel{
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 0rpx;
  top: 0rpx;
}
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background:  rgb(239, 239, 244);
  z-index: 9000;
  opacity: 0.4;
}

.modalDlg{
  width: 580rpx;
  height: 820rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: scroll;
}
.button{
  margin-top:20rpx;
  width: 30%;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  background: rgb(76, 172, 254);
  color: white
}
.border{
  border-bottom: #e4e2e2 1px solid;
  width: 95%;
  height: 90rpx;
  line-height: 90rpx;
}
.xinxi{
  margin-top:10rpx;
  display: flex;  
  flex-direction: row;
  padding-left:15rpx; 
}
.wx-switch-input{
  width:85rpx !important;
  height:35rpx !important;
  margin-left:50rpx !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
  width:40rpx !important;
  height: 30rpx !important;
}
/* 中间的小圆球 */
/*绿色样式（true的样式）*/
.wx-switch-input::after{
  width: 40rpx !important;
  height: 30rpx !important;
}